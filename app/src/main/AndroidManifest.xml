<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.giftelves">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/gift_ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:name=".activitys.MyApplication">
        <activity android:name=".activitys.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activitys.GiftInformationActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity android:name=".activitys.SplashActivity">
        </activity>
        <activity android:name=".activitys.OpenGameManagerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity android:name=".activitys.OpenGameTestActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity android:name=".activitys.HotGameActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity android:name=".activitys.HitThirdActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity android:name=".activitys.SpecialNewsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity android:name=".activitys.LoginActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity android:name=".activitys.RegistActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
        <activity android:name=".activitys.SearchActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
    </application>

</manifest>