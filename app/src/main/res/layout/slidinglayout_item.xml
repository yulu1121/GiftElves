<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:civ_border_width="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:civ_border_color="#ffffff"
        android:id="@+id/image_head"
        android:src="@mipmap/def_loading"
         />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="请登录"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:gravity="left|center_vertical"
        android:layout_toEndOf="@+id/image_head"
        android:id="@+id/login_button" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goldMoney"
        android:text="0"
        android:layout_below="@+id/login_button"
        android:layout_toEndOf="@+id/image_head"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="center_vertical|left"
        android:drawableEnd="@mipmap/gb"
        />

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:layout_below="@+id/image_head"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="主页"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:id="@+id/home_rb"
                android:layout_weight="1"
               android:drawableStart="@mipmap/icon_home"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:id="@+id/mygift_rb"
                android:drawableStart="@mipmap/my_gift"
                android:text="我的礼包"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="18sp"
                />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:id="@+id/aboutme_rb"
            android:drawableStart="@mipmap/about_me"
            android:text="关于我们"
            android:layout_weight="1"
            />

        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:paddingTop="20dp"
                android:id="@+id/setting_rb"
                android:drawableStart="@mipmap/icon_settings"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:text="设置" />
        </RadioGroup>
</RelativeLayout>