<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SlidingPaneLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sliding_layout"
    android:descendantFocusability="afterDescendants"
    android:isScrollContainer="true"
    android:background="@mipmap/menu_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:id="@+id/login_slid_menu"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:civ_border_width="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            app:civ_border_color="#ffffff"
            android:id="@+id/image_head"
            android:src="@mipmap/def_loading"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="请登录"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:gravity="left|center_vertical"
            android:layout_toEndOf="@+id/image_head"
            android:id="@+id/login_button" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goldMoney"
            android:text="0"
            android:layout_below="@+id/login_button"
            android:layout_toEndOf="@+id/image_head"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center_vertical|left"
            android:drawableEnd="@mipmap/gb"
            />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:layout_below="@+id/image_head"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="主页"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:id="@+id/home_rb"
                android:layout_weight="1"
                android:drawableStart="@mipmap/icon_home"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:id="@+id/mygift_rb"
                android:drawableStart="@mipmap/my_gift"
                android:text="我的礼包"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="18sp"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:id="@+id/aboutme_rb"
                android:drawableStart="@mipmap/about_me"
                android:text="关于我们"
                android:layout_weight="1"
                />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:paddingTop="20dp"
                android:id="@+id/setting_rb"
                android:drawableStart="@mipmap/icon_settings"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:text="设置" />
        </RadioGroup>
    </RelativeLayout>
<LinearLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/upsearch"
        android:background="#00c977"
        android:clickable="true"
        >
    <Button
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:id="@+id/radioselect"
        android:button="@null"
        android:layout_marginStart="10dp"
        android:layout_gravity="center_vertical"
        android:background="@mipmap/title_bar_menu"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menu"
        android:text="礼包精灵"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textColor="#ffffff"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="搜索"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:id="@+id/search"
            android:layout_marginEnd="10dp"
            />
    </android.support.v7.widget.Toolbar>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/viewPager_main"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/gamegift"
            android:checked="true"
            android:drawableTop="@drawable/gift_selector"
            style="@style/radioButtonStyle"
            />
        <RadioButton
            android:id="@+id/hotgame"
            style="@style/radioButtonStyle"
            android:drawableTop="@drawable/hot_selector"
            />
        <RadioButton
          android:id="@+id/opengame"
            style="@style/radioButtonStyle"
            android:drawableTop="@drawable/open_selector"
           />
        <RadioButton
            android:id="@+id/special"
            style="@style/radioButtonStyle"
            android:drawableTop="@drawable/special_selector"
            />
        <RadioButton
            android:id="@+id/aboutme"
            android:visibility="gone"
            style="@style/radioButtonStyle"
            android:drawableTop="@drawable/me_selector"
            />
    </RadioGroup>
</LinearLayout>
</android.support.v4.widget.SlidingPaneLayout>